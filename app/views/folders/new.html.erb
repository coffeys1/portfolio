<div class="row resource-form">
  <div class="col-md-4 col-md-offset-4">
    <h2>Create a New Folder</h2>
    <hr>
    <%= form_for @folder, url: newfolder_path do |f| %>

        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>

        <label for="icon-select">Icon</label>
        <select name="folder[icon]" class="form-control" id="icon-select">
          <% fa_icons.each do |i_key, i_val| %>
              <option value="<%= i_val[:class] %>">
                <%= i_val[:class] %>
              </option>
          <% end %>
        </select>

        <%= f.submit 'Create folder', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>